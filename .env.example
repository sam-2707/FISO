# FISO Environment Configuration
# Copy this to .env and set your actual values

# Server Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production
API_RATE_LIMIT=100  # requests per minute

# Database
DATABASE_URL=sqlite:///fiso_production.db

# API Keys (for external services)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-secret
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=path/to/gcp/credentials.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fiso.log

# Security
JWT_SECRET=your-jwt-secret-key-change-this
API_KEY_SALT=your-api-key-salt-change-this
