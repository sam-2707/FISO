# FISO Real Cloud Integration Environment Variables
# Copy this to .env and fill in your actual cloud credentials

# ========================================
# AWS Credentials
# ========================================
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=${PRODUCTION_VALUE_REQUIRED}
AWS_SECRET_ACCESS_KEY=${PRODUCTION_VALUE_REQUIRED}
AWS_DEFAULT_REGION=us-east-1

# ========================================
# Azure Credentials  
# ========================================
# Get these from Azure Portal > App Registrations
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Set to true if running in Azure (uses Managed Identity)
USE_MANAGED_IDENTITY=false

# ========================================
# Google Cloud Credentials
# ========================================
# Get these from GCP Console > IAM & Admin > Service Accounts
GCP_PROJECT_ID=your_gcp_project_id
GCP_BILLING_ACCOUNT_ID=your_billing_account_id

# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ========================================
# Optional: OpenAI for Enhanced AI Features
# ========================================
OPENAI_API_KEY=${PRODUCTION_VALUE_REQUIRED}

# ========================================
# Database Configuration (if using PostgreSQL)
# ========================================
DATABASE_URL=postgresql://user:password@${PRODUCTION_HOST}:5432/fiso_production

# ========================================
# Security Configuration
# ========================================
SECRET_KEY=your_secret_key_for_jwt_tokens
API_KEY_SALT=random_salt_for_api_keys

# ========================================
# Monitoring & Logging
# ========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090