# FISO Production Environment Configuration
# ===========================================

# Application Settings
NODE_ENV=production
FLASK_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_PORT=3000

# Database Configuration (Update with your production values)
DATABASE_URL=postgresql://user:password@your-db-host:5432/fiso_production
REDIS_URL=redis://your-redis-host:6379

# Cloud Provider APIs (Configure with your credentials)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# Security Settings
SECRET_KEY=your_production_secret_key_min_32_chars
JWT_SECRET=your_jwt_secret_key_min_32_chars
API_KEY_SALT=your_api_key_salt_min_16_chars

# External Services
OPENAI_API_KEY=your_openai_api_key_if_needed

# Features
REAL_DATA_ENABLED=true
CACHE_ENABLED=true
MONITORING_ENABLED=true
RATE_LIMITING_ENABLED=true

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=30

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using
NEW_RELIC_LICENSE_KEY=your_new_relic_key_if_using
